{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"], 
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@libs/*": ["src/libs/*"],
    },
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}